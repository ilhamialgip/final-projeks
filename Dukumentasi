 #include<iostream> //adalah input output stream header yang di gunakan sebagai standart I/O di c++
#include<conio.h> //header yang di gunakan untuk menampilkan hasil antarmuka  kepada pengguna
using namespace std; //untuk memberitahu kepada kompiler bahwa kita akan menggunakan semua fungsi,
                     //class, atau file yang terdapat pada memori namespapce std.
main()
{
            int pilihan,lama,harga, i=0, j=0, k=0; //untuk mendeklarasikan variable pilihan, lama, harga, i, j, dan k
                                                   //yang mana variable i, j, dan k memiliki value 0 atau nilai 0
            string nama, no, telp, passk, smartacc; //untuk mendeklarasikan variable nama, no, telp, dan smartacc
			no[100]; //untuk memberikan value/nilai pada variable no
                  passk[100]; //untuk memberikan value/nilai pada variable passk
                  smartacc[100]; //untuk memberikan value/nilai pada variable smartacc
                       
                        cout<<"===========KOST Little BOY===========\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                        cout<<"Nama Pemilik Kos : Hafiz Nur \n"; //untuk menampilkan nama pemilik kost pada terminal cmd
                        cout<<"Nomor telepon  : 083865674591\n"; //untuk menampilkan nomor telp pemilik kost pada console/terminal cmd
						cout<<"KOST YANG NYAMAN DAN BEBAS DARI ASAP ROKOK\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
						cout<<"Anda Belum Punya Rumah, Kost Dulu Aja!!!!\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                        cout<<"========================================\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
