//membuat aplikasi pembayaran kos kosan
//masuk ke aplikasi menggunkan nama dan nomor user jadi keamanan yang kami gunakan adalah mengenkripsikan nomor user tersebut 
//algoritma cesar chiper pada enkripsi public_key dan kunci untuk enkripsi adalah 3 yang ditambahkan ke nilai ASCII


#include<iostream> //memanggil berkas iostream sebagai standar input output operasi
#include<conio.h> //memanggil berkas conio untuk menampilkan hasil antarmuka
using namespace std;
main() //default
{
            int pilihan,lama,harga, i=0;
            string nama,no,x;
		no[100];

                       
                        cout<<"===========KOS THE WISKY PARK===========\n";
                        cout<<"Nama Pemilik Kos :KOS THE WISKY PARK\n";
                        cout<<"Nomor telepon  : 089595677780\n";
			cout<<"KOS BEBAS ASAP ROKOK SEDIA RUANG KHUSUS METTING\n";
			cout<<"AYO BURUAN NGEKOS DI THE WISKY PARK\n";
			
                        cout<<"========================================\n";
                        cout<<"PEMBAYAR KOS KOSAN\n";
                        cout<<"========================================\n";
			
			//dekarasi variabel yang digunakan imputan nama dan nomor user
			
			cout<<"Masukkan Nama                    : ";cin>>nama;
                        cout<<"Masukkan no telepon             : ";cin>>no;
			cout<<"Masukkan public key:\t";cin >> x
			for(i; (i < 100 && no[i] != '\0'); i++)
			no[i] = no[i] + 2; //kunci untuk enkripsi adalah 3 yang ditambahkan ke nilai ASCII
			
			//dekarasi variabel tambahan
			
                        cout<<"1.KOSAN EKSLUSIF\n";
                        cout<<"2.KOSAN EKONOMI\n";
                        cout<<"PILIHAN KOS KOSAN YANG AKAN DI BAYAR(1-2) : ";cin>>pilihan;
                        cout<<endl;
                       
                        system ("cls"); //menghapus data yang telah dijalankan tanpa harus menutup program tersebut dan membukanya kembali
                       
                        switch(pilihan)
                        {
                                    case 1:
                                                cout<<"1.KOSAN EKSLUSIF\n";
                                                cout<<"fasilitas           =Kamar 7x5, Ac,Kasur,kamar mandi, Tv\n";
                                                cout<<"Harga/bulan    = Rp.900.000\n";
                                                cout<<"Jumlah Bulanan yang dibayar!\n\n";
                                                cout<<"Masukan Jumlah Angka /(bulanan) : ";cin>>lama;
                                                harga=900000*lama;
						cout<< "Nama Pembayaran Kos: " << nama << endl;
						cout << "\nNo Telp Encrypted: " << no << endl;
						cout<<"========================================\n";
						cout<<"Nomor Rekening 9923345664\n";
						cout<<"Atas Nama KOS THE WISKY PARK\n";
						cout<<"Terima Kasih\n";
						cout<<"========================================\n";
                                                cout<<"Total harga yang harus anda bayar= Rp."<<harga<<endl;
                                                break;
												
                                   
                                    case 2:
                                                cout<<"2.KOSAN EKONOMI\n";
                                                cout<<"Fasilitas          = Kamar 6x4, Kasur,kamar mandi, Tv\n";
                                                cout<<"Harga/bulan    = Rp.700.000\n";
                                                cout<<"Jumlah Bulanan yang dibayar!\n";
                                                cout<<endl;
                                                cout<<"Masukan Jumlah Angka /(bulanan) : ";cin>>lama;
                                                harga=700000*lama;
						cout<< "Pembayaran Kos: " << nama << endl;
						cout << "\nNo Telp Encrypted: " << no << endl;
						cout<<"========================================\n";
						cout<<"Nomor Rekening 9923345664\n";
						cout<<"Atas Nama KOS THE WISKY PARK\n";
						cout<<"Terima Kasih\n";
						cout<<"========================================\n";
                                                cout<<"Total harga yang harus anda bayar= Rp."<<harga<<endl;
                                                break;
                                               
                                 
                          default:
                          cout<<"yang anda masukkan salah!";
                        }
           
                        cout<<endl;
                        cout<<"untuk kembali ke menu awal silahkan tekan enter! ";
