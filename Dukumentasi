				cout<<"Masukkan Nama Anda : ";cin>>nama; //untuk menampilkan teks perintah "masukkan nama" pada console/terminal cmd
                         cout<<"Masukkan No telepon Anda : ";cin>>telp; //untuk menampilkan teks perintah "masukkan no telp" pada console/terminal cmd
                        cout<<"Masukkan Password Pintu Anda : ";cin>>passk; //untuk menampilkan teks perintah "masukkan password pintu" pada console/terminal cmd
                                  
						for(j; (j < 100 && passk[j] != '\0'); j++) //algoritma perulangan for yang di gunakan untuk mengenkripsi password pintu
						 passk[j] = passk[j] + 3; //kunci untuk enkripsi adalah 3 yang ditambahkan ke nilai ASCII
                        
						cout<<"Masukkan Password Smart Home Anda : ";cin>>smartacc; //untuk menampilkan teks perintah "masukkan password smart home" pada console/terminal cmd
                                   
						for(k; (k < 100 && smartacc[k] != '\0'); k++) //algoritma perulangan for yang di gunakan untuk mengenkripsi password smart home
                        smartacc[k] = smartacc[k] + 3; //kunci untuk enkripsi adalah 3 yang ditambahkan ke nilai ASCII  
                       
					   cout<<"Masukkan NIK : ";cin>>no; //untuk menampilkan teks perintah "masukkan NIK" pada console/terminal cmd
						for(i; (i < 100 && no[i] != '\0'); i++) //algoritma perulangan for yang di gunakan untuk mengenkripsi NIK
							no[i] = no[i] + 3; //kunci untuk enkripsi adalah 3 yang ditambahkan ke nilai ASCII	
                       
					   cout<<"1.KOSAN EKSLUSIF\n"; //untuk menampilkan teks option "PILIHAN JENIS KOST" pada console/terminal cmd
                        cout<<"2.KOSAN EKONOMI\n"; //untuk menampilkan teks option "PILIHAN JENIS KOST" pada console/terminal cmd
                        cout<<"PILIHAN KOS KOSAN YANG AKAN DI BAYAR(1-2) : ";cin>>pilihan; 
                        //untuk menampilkan teks option "PILIHAN KOST YANG AKAN DI BAYAR" pada console/terminal cmd
                        cout<<endl; //untuk menghentikan suatu proses yang berjalan 
                       
                        system ("cls"); //untuk membersihkan layar pada program yang akan dijalankan
                       
                        switch(pilihan) //untuk pembuatan rute pada case yang akan di pilih
                        {
                                    case 1: //untuk menampilkan hasil dari pilihan pertama
                                                cout<<"1.KOSAN EKSLUSIF\n"; //untuk menampilkan nama pilihan kost pada terminal cmd
                                                cout<<"fasilitas           =Kamar 7x5, Ac,Kasur,kamar mandi, Tv\n"; //untuk menampilkan nama fasilitas kost pada terminal cmd
                                                cout<<"Harga/bulan    = Rp.900.000\n"; //untuk menampilkan nama harga kost per bulan pada terminal cmd
                                                cout<<"Jumlah Bulanan yang harus dibayar!\n\n"; //untuk menampilkan jumlah bulanan kost yg harus di bayar pada terminal cmd
                                                cout<<"Masukan Jumlah Angka /(bulanan) : ";cin>>lama;
                                                //untuk menampilkan teks perintah "Jumlah lama per bulan" pada console/terminal cmd
                                                harga=900000*lama; //perintah untuk mengkalikan harga kost dengan lama penyewaan
												cout<<"\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"========================================\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<< "Nama Pembayar Kos: " << nama << endl; //untuk menampilkan nama pembayar kos
                                                                        cout << "\nNo telepon Pembayar Kost : " << telp << endl; //untuk menampilkan no telefon pembayar kost
                                                                        cout << "\nPassword Pintu di Enkripsi : " << passk << endl; //untuk menampilkan password pintu kost
                                                                        cout << "\nPassword Smart Home di Enkripsi : " << smartacc << endl; //untuk menampilkan password smart home 
												cout << "\nNIK di Enkripsi : " << no << endl; //untuk menampilkan NIK yg ter enkripsi
                                                                        cout<<"========================================\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"========================================\n";  //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"Nomor Rekening 9923345664\n";  //untuk menampilkan nomor rekening pemilik kost
												cout<<"Atas Nama Kost Little BOY\n"; //untuk menampilkan nama kost
												cout<<"Terima Kasih\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"========================================\n";  //untuk menampilkan teks/simbol pada console/terminal cmd    
                                                cout<<"Total harga yang harus anda bayar= Rp."<<harga<<endl; //untuk menampilkan harga yang harus di bayar 
                                                break; //untuk menghentikan proses perulangan  
												
                                   
                                    case 2: //untuk menampilkan hasil dari pilihan ke dua
                                                cout<<"2.KOSAN EKONOMI\n"; //untuk menampilkan nama pilihan kost pada terminal cmd
                                                cout<<"Fasilitas          = Kamar 6x4, Kasur,kamar mandi, Tv\n"; //untuk menampilkan nama fasilitas kost pada terminal cmd
                                                cout<<"Harga/bulan    = Rp.700.000\n"; //untuk menampilkan nama harga kost per bulan pada terminal cmd
                                                cout<<"Jumlah Bulanan yang dibayar!\n"; //untuk menampilkan jumlah bulanan kost yg harus di bayar pada terminal cmd
                                                cout<<endl; //untuk menghentikan suatu proses yang berjalan 
                                                cout<<"Masukan Jumlah Angka /(bulanan) : ";cin>>lama;
                                                //untuk menampilkan teks perintah "Jumlah lama per bulan" pada console/terminal cmd
                                                harga=700000*lama;
												cout<<"\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"========================================\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<< "Pembayaran Kos: " << nama << endl; //untuk menampilkan nama pembayar kos
                                                                        cout << "\nNo telepon Pembayar Kost : " << telp << endl; //untuk menampilkan no telefon pembayar kost
                                                                        cout << "\nPassword Pintu di Enkripsi : " << passk << endl; //untuk menampilkan password pintu kost
                                                                        cout << "\nPassword Smart Home di Enkripsi : " << smartacc << endl; //untuk menampilkan password smart home 
												cout << "\nNIK di enkripsi: " << no << endl; //untuk menampilkan NIK yg ter enkripsi
                                                                        cout<<"========================================\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                                                                        cout<<"\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"========================================\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"Nomor Rekening 9923345664\n"; //untuk menampilkan nomor rekening pemilik kost
												cout<<"Atas Nama Kost Little BOY\n"; //untuk menampilkan nama kost
												cout<<"Terima Kasih\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
												cout<<"========================================\n"; //untuk menampilkan teks/simbol pada console/terminal cmd
                                                cout<<"Total harga yang harus anda bayar= Rp."<<harga<<endl;
                                                //untuk menampilkan total harga yang harus di bayar
                                                break; //untuk menghentikan proses perulangan 
                                               
                                 
                                    default: //untuk memberi tanda default block dari code yang akan di buat jika tidak ada kecocokan pada "switch" 
                                                cout<<"yang anda masukkan salah!"; //untuk menampilkan teks pemberitahuan
                        }
           
                        cout<<endl; //untuk menghentikan suatu proses yang berjalan 
                        cout<<"untuk keluar silahkan tekan Enter! "; //untuk menampilkan teks perintah pada console/cmd
                        getch(); //untuk menghentikan suatu proses yang berjalan dan membaca input dari keyboard
           
            return 0; //untuk mengembalikan nilai tapi karena (0) program tidak akan menampilkan keluaran apapun.
}    
